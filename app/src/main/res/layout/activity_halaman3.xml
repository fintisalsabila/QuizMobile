<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halaman3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProfilePriti"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#006064"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Halaman 3"
        app:titleTextColor="@android:color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#80FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewNama1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Judul" />
                <TextView
                    android:id="@+id/textViewNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=": Sistem Informasi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewNIM1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="penjelasan" />
                <TextView
                    android:id="@+id/textViewNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=": Sistem Informasi merujuk pada rangkaian prosedur, perangkat lunak, data, dan perangkat keras yang digunakan untuk mengumpulkan, menyimpan, mengolah, dan menyampaikan informasi kepada pengguna." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewUsername1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Kesimpulan" />
                <TextView
                    android:id="@+id/textViewUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text=": Kesimpulan mengenai sistem informasi adalah bahwa mereka merupakan kerangka yang mengintegrasikan teknologi, orang, data, perangkat lunak, dan prosedur bisnis untuk mengumpulkan, menyimpan, memproses, dan menyampaikan informasi yang relevan, tepat waktu, dan akurat kepada pengguna. " />
            </LinearLayout>

            <Button
                android:id="@+id/btnBackPriti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="20"
                android:backgroundTint="#006064"
                android:text="Back" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>