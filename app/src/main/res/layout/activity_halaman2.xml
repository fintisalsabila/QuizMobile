<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halaman1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProfileAldi"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#006064"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Halaman 2"
        app:titleTextColor="@android:color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#80FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewNama1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Judul" />
                <TextView
                    android:id="@+id/textViewNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=": Pemrograman Mobile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewNIM1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Penjelasan" />
                <TextView
                    android:id="@+id/textViewNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=": Pemrograman mobile adalah proses menciptakan perangkat lunak yang dapat berjalan pada perangkat mobile, seperti smartphone atau tablet. Pemrograman mobile melibatkan pengembangan aplikasi untuk sistem operasi mobile, seperti Android atau iOS." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewAlamat1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Kesimpulan" />
                <TextView
                    android:id="@+id/textViewUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text=": Kemampuan dalam pemrograman mobile sangat penting dalam mengembangkan aplikasi yang dapat diakses dan digunakan oleh pengguna melalui perangkat mobile." />
            </LinearLayout>

            <Button
                android:id="@+id/btnBackAldi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="20"
                android:backgroundTint="#006064"
                android:text="Back" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
