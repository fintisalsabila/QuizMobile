<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halaman2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProfileDaniel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#006064"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Halaman 1"
        app:titleTextColor="@android:color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#80FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Existing layout elements -->

            <!-- New section about Kotlin -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewKotlin1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Bahasa Pemrograman" />

                <TextView
                    android:id="@+id/textViewKotlin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=": Kotlin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textViewKotlinDesc1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Penjelasan" />

                <TextView
                    android:id="@+id/textViewKotlinDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text=": Kotlin adalah bahasa pemrograman modern yang interoperabel dengan Java. Dikembangkan oleh JetBrains, Kotlin dirancang untuk menyederhanakan pengembangan aplikasi Android dan menyediakan fitur-fitur yang lebih ekspresif." />

            </LinearLayout>

            <!-- End of new section -->

            <Button
                android:id="@+id/btnBackDaniel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="20"
                android:backgroundTint="#006064"
                android:text="Back" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
